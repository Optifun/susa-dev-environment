{
  "plugins": ["react", "prettier"],
  "extends": ["plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "ignorePatterns": [".docz", "dist", "node_modules"],
  "rules": {
    "prettier/prettier": ["warn"]
  }
}
